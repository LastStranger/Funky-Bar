{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],// 支持css modules,还得在src里面创建声明文件
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
//    "baseUrl": "../",
    "outDir": "dist/js",
//    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
