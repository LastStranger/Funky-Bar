{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "components": ["/components"] // this mapping is relative to "baseUrl"
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "lib",
//    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
